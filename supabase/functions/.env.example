# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration  
SUPABASE_DB_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# Authentication Keys
SUPABASE_ANON_KEY=your-anon-key-here

# External API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-for-signature-verification

# Z-API Configuration (if using Z-API for WhatsApp)
ZAPI_TOKEN=your-zapi-token
ZAPI_INSTANCE_ID=your-zapi-instance-id

# Other Third-Party Services
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
SENDGRID_API_KEY=SG.your-sendgrid-api-key
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_ACCOUNT_SID=your-twilio-account-sid

# Development/Debug Settings
LOG_LEVEL=info
DEBUG_MODE=false

# Note: Never commit actual values to version control
# Copy this file to .env.local and fill in your actual values
# Make sure .env.local is in your .gitignore file